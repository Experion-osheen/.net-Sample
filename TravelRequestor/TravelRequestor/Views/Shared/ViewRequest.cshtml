
@using DTOs
@model IEnumerable<ReqDto>
@{
    ViewBag.Title = "View Requests";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    List<SelectListItem> ActionList = new List<SelectListItem>();
}


<html>
<head>
    <style>
        tfoot input {
            width: 100%;
            padding: 3px;
            box-sizing: border-box;
        }
    </style>
</head>
<body>
    <h2>All Requests</h2>
    <table id="example">
        <thead>
            <tr>
                <th>Employee</th>
                <th>Cause</th>
                <th>PID</th>
                <th>Source</th>
                <th>Destination</th>
                <th>FromDate</th>
                <th>ToDate</th>
                <th>Status</th>

            </tr>

        </thead>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                string Todate = item.Todate.ToString("dd-MM-yyyy");
                string FromDate = item.Fromdate.ToString("dd-MM-yyyy");
                <tr>
                    <td>@item.empid</td>
                    <td>@item.cause</td>
                    <td>@item.pid </td>
                    <td>@item.source</td>
                    <td>@item.Destination</td>
                    <td>@FromDate</td>
                    <td>@Todate</td>
                    <td>@item.mode</td>

                </tr>
            }
        }
        <tfoot>
            <tr>
                <th>Employee</th>
                <th>Cause</th>
                <th>PID</th>
                <th>Source</th>
                <th>Destination</th>
                <th>FromDate</th>
                <th>ToDate</th>
                <th>Status</th>
            </tr>
        </tfoot>

    </table>
    <script src="~/Scripts/jquery-1.12.4.js"></script>
    <link href="~/Content/themes/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script>
        abc();
        function abc() {
            $('#example tfoot th').each(function () {
                var title = $(this).text();
                $(this).html('<input type="text" placeholder="Search ' + title + '" />');
            });

             //DataTable
            var table = $('#example').DataTable();
        $('#example').DataTable();
             //Apply the search
            table.columns().every(function () {
                var that = this;

                $('input', this.footer()).on('keyup change', function () {
                    if (that.search() !== this.value) {
                        that
                        .search(this.value)
                        .draw();
                    }
                });
            });

        }

    </script>

</body>
</html>
